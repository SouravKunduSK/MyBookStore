@model List<MyBookStore.Models.Book>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- Breadcrumbs-->

    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Running Books</li>

    </ol>
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-book-reader"></i>
            Running Books Details
            <a href="@(Url.Action("BookList", "RunBook"))" class="btn btn-info pull-right fa fa-plus">Add New Book</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-condensed table-hover table-bordered table-striped table" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>

                            <th>Serial No.</th>
                            <th>Picture</th>
                            <th>Book Name</th>
                            <th>Author Name</th>
                            <th>Category</th>
                            <th>Reading Status</th>
                            <th>Start Date</th>

                            <th>Action</th>

                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>@(Model.IndexOf(item)+1)</td>
                                <td><img src="@Url.Content(item.Photo)" style="width:100px; height:67px;" /></td>
                                <td>@item.BookName</td>
                                <td>@item.Author.AuthorName</td>
                                <td>@item.Category.CategoryName</td>

                                <td>@item.Reading.ReadingStatus</td>

                                <td>@item.StartDate.GetValueOrDefault().ToLongDateString()</td>





                                <td>
                                    <a href="@Url.Action("Edit", "RunBook", new { id = item.BookId})" class="btn btn-info">Edit</a>
                                    @*<a href="@Url.Action("Delete", "RunBook", new { id = item.BookId})" class="btn btn-danger">Delete</a>*@
                                </td>



                            </tr>
                        }

                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>
