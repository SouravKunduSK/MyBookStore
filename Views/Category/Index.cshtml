@model List<MyBookStore.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Categories</a>
        </li>
        <li class="breadcrumb-item active">All Categories</li>
    </ol>
    <!-- DataTables Example -->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-clipboard-list"></i>
            Category Details
            <a href="@( Url.Action("Create", "Category"))" class="btn btn-info pull-right fa fa-plus">Add New</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Serial No.</th>
                            <th>Category Name</th>
                            <th>Action</th>

                        </tr>
                    </thead>
             
                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>@(Model.IndexOf(item)+1)</td>

                                <td>@item.CategoryName</td>
                                <td>
                                    <a href="@Url.Action("Edit", "Category", new { id = item.CategoryId})" class="btn btn-outline-info">Edit</a>
                                    <a href="@Url.Action("Delete", "Category", new { id = item.CategoryId})" class="btn btn-outline-danger">Delete</a>
                                </td>


                            </tr>

                        }

                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>
